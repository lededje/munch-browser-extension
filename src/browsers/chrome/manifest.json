{
  "name": "MunchDB",
  "version": "0.1.0",
  "manifest_version": 2,
  "author": "munchdb.com",
  "description": "Display food hygiene ratings on UK takeaway websites",
  "homepage_url": "http://munchdb.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://api.munchdb.com/*",
    "http://www.just-eat.co.uk/*",
    "https://hungryhouse.co.uk/*"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  }
}
