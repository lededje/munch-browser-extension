{
  "name": "MunchDB - Food hygiene ratings for takeaways",
  "short_name": "MunchDB",
  "version": "0.2.0",
  "manifest_version": 2,
  "author": "munchdb.com",
  "description": "Munch displays food hygiene ratings on your favourite UK takeaway websites: JustEat & HungryHouse.",
  "homepage_url": "http://munchdb.com",
  "icons": {
    "16": "icons/munch-logo-small-32.png",
    "48": "icons/munch-logo-small-96.png",
    "128": "icons/munch-logo-small-256.png",
    "256": "icons/munch-logo-small-512.png"
  },
  "permissions": [
    "http://api.munchdb.com/*",
    "http://www.just-eat.co.uk/*",
    "https://hungryhouse.co.uk/*"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  }
}
